{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "src",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "lib": [
            "es2017"
        ]
    },
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}